---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---
<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<div class="container">
				<!-- Hero Section -->
				<section class="section section--hero fade-in">
					<div class="hero">
						<h1 class="hero__title">Professional IT Services</h1>
						<p class="hero__tagline">
							Reliable, efficient, and customized technology solutions to help your business thrive in today's digital environment.
						</p>
						<div class="hero__cta">
							<a href="#contact" class="btn btn--primary">Get Started</a>
							<a href="/about" class="btn btn--secondary">Learn More</a>
						</div>
					</div>
				</section>
				
				<!-- Services Section -->
				<section class="section section--services fade-in delay-1">
					<h2 class="section__title">Our Services</h2>
					<div class="services-grid">
						<div class="service-card">
							<div class="service-card__icon">üíª</div>
							<h3 class="service-card__title">Technical Support</h3>
							<p class="service-card__text">Responsive troubleshooting and technical assistance for all your hardware and software needs, with minimal downtime.</p>
						</div>
						
						<div class="service-card">
							<div class="service-card__icon">üîí</div>
							<h3 class="service-card__title">Network Security</h3>
							<p class="service-card__text">Comprehensive security solutions to protect your business data and infrastructure from evolving threats.</p>
						</div>
						
						<div class="service-card">
							<div class="service-card__icon">‚òÅÔ∏è</div>
							<h3 class="service-card__title">Cloud Solutions</h3>
							<p class="service-card__text">Strategic cloud implementation and migration services to enhance accessibility and scalability.</p>
						</div>
					</div>
				</section>
				
				<!-- About Section -->
				<section class="section section--about-preview fade-in delay-2">
					<h2 class="section__title">Why Choose Morris IT Consulting</h2>
					<p class="section__text">
						With over a decade of experience in the IT industry, I deliver tailored solutions that align with your business objectives and technical requirements. As a veteran-owned business, I bring military-grade precision and discipline to every project.
					</p>
					<div class="cta">
						<a href="/about" class="btn btn--primary">Learn More About My Approach</a>
					</div>
				</section>
				
				<!-- Contact Section -->
				<section class="section section--contact fade-in delay-3" id="contact">
					<h2 class="section__title">Contact Me</h2>
					<p class="section__text">Let's discuss how I can help address your IT challenges. Fill out the form below, and I'll get back to you promptly.</p>
					
					<form class="contact-form" action="https://formspree.io/f/xjkyoqna" method="POST">
						<div class="form-row">
							<div class="form-group">
								<label for="name" class="form-label">Name</label>
								<input type="text" id="name" name="name" class="form-input" required>
							</div>
							
							<div class="form-group">
								<label for="email" class="form-label">Email</label>
								<input type="email" id="email" name="email" class="form-input" required>
							</div>
						</div>
						
						<div class="form-group">
							<label for="subject" class="form-label">Subject</label>
							<input type="text" id="subject" name="subject" class="form-input">
						</div>
						
						<div class="form-group">
							<label for="message" class="form-label">Message</label>
							<textarea id="message" name="message" rows="5" class="form-textarea" required></textarea>
						</div>
						
						<button type="submit" class="btn btn--primary">Send Message</button>
					</form>
				</section>
			</div>
		</main>
		<Footer />
	</body>
</html>
